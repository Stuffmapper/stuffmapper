#conversation-container.animate-250
	.animate-250(style="width: 100%;height: auto;background-color: #fff;display: block;position: relative;z-index: 2;")
		i#back-to-edit-my-item.get-stuff-back-button.fa.fa-arrow-left.animate-250
		.sm-text-m(style="display:inline-block;position:relative;margin-left:15px;") Conversation
	#conversation-messages-container
		ul#conversation-messages
			li.conversation-message-container(ng-repeat="message in conversation | reverse" class="conversation-message-container-{{ message.type }}")
				.conversation-message(class="conversation-{{ message.type }}-message") {{ message.message }}
	#conversation-input-container
		sm-textarea-group-button.sm-full-width#conversation-input(rows="1" placeholder="send a message" submit="sendMessage()")
