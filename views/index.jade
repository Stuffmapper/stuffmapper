doctype html
- var ionicClass = ionic?'ionic':'';
html(lang="en" class= ionicClass ng-app="stuffMapp")
    head
        meta(charset="utf-8")
        meta(name="viewport" content="initial-scale=1, maximum-scale=1, user-scalable=no, width=device-width")
        base(href="/")
        title Stuffmapper
        link(href="/css/style.css" rel="stylesheet")
        link(href="/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet")
        script(src="/lib/jquery/dist/jquery.min.js")
        if ionic
            link(href="lib/ionic/css/ionic.css" rel="stylesheet")
            script(src="lib/ionic/js/ionic.bundle.js")
            script(src="cordova.js")
        else
            script(src="/lib/angular/angular.js")
        script(src="/lib/angular-ui-router/release/angular-ui-router.min.js")
        script(src="/lib/angular-animate/angular-animate.min.js")
        script(src="https://maps.googleapis.com/maps/api/js")
        script(src="/js/app.js")
    body(ng-controller="MainController")
        #modal-windows
            #modal-windows-bg.animate-250
            .modal-container
                .close-modal-bg(ng-click="closePopups()")
                #sign-in.modal-window.animate-250
                    .modal-header
                        .modal-title Sign in to Stuffmapper!
                        i.fa.fa-close.modal-close(ng-click="closePopups()")
                    .modal-content
                        #sign-in-step-one.modal-steps
                            .social-media-sign-in-container
                                a#google-plus-sign-in.sign-in-buttons
                                    i.fa.fa-google-plus
                            .social-media-sign-in-container
                                a#facebook-sign-in.sign-in-buttons
                                    i.fa.fa-facebook-square
                            a#custom-sign-in.sign-in-message or sign in with your email
                        //- #sign-in-step-one-point-five.modal-steps
            .modal-container
                .close-modal-bg(ng-click="closePopups()")
                #sign-up.modal-window.animate-250
                    .modal-header
                        .modal-title Sign up for Stuffmapper!
                        i.fa.fa-close.modal-close(ng-click="closePopups()")
        #container
            #header
                img#logo(src="/img/stuffmapper-logo.png")
                #user-portal
                    a#sign-in-button.user-portal-buttons(ng-click="signInOrUp('in')") Sign In
                    a#sign-up-button.user-portal-buttons(ng-click="signInOrUp('up')") Sign Up
            #content(ui-view)
